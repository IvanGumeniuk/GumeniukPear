<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="Registration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnSingUp"
                style="@android:style/Widget.Button"
                android:layout_below="@+id/btnSingIn"
                android:layout_centerHorizontal="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:layout_marginTop="26dp"
                android:id="@+id/textPassword"
                android:hint="Password"
                android:text="12345"
                android:layout_below="@+id/textLogin"
                android:layout_centerHorizontal="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:layout_marginTop="25dp"
                android:id="@+id/textLogin"
                android:hint="Login"
                android:text="Qwerty"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/textPassword"
                android:layout_alignStart="@+id/textPassword" />

            <Button
                android:text="Login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnSingIn"
                style="@android:style/Widget.Button"
                android:layout_marginTop="22dp"
                android:layout_below="@+id/textPassword"
                android:layout_centerHorizontal="true" />

            <Button
                android:text="Exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/exit"
                android:layout_below="@+id/btnSingUp"
                android:layout_alignLeft="@+id/btnSingIn"
                android:layout_alignStart="@+id/btnSingIn"
                style="@android:style/Widget.Button" />
        </RelativeLayout>
    </ScrollView>

</LinearLayout>