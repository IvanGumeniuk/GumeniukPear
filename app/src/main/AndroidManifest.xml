<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gumeniuk.pear">

    <application
        android:name="com.gumeniuk.pear.MyApplicationClass"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Login"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.gumeniuk.pear.Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.gumeniuk.pear.Activities.RegActivity"
            android:label="Registration" />
        <activity
            android:name="com.gumeniuk.pear.Activities.WelActivity"
            android:label="Welcome" />
    </application>

</manifest>